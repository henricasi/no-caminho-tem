<div class="container backdrop h-100">
  <div class="form-container p-3">
    <div class="container py-5 w-50 d-flex flex-column justify-content-center">
      <h2>Editar sua vendinha</h2>
      <form class="mt-3" id="form" action="/edit-venda" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input class="form-control" type="text" name="name" value="{{name}}" placeholder="Nome da sua vendinha"> 
        </div>
        <div class="form-group">
          <input class="form-control" type="textarea" name="description" value="{{description}}" placeholder="Adicione uma breve descrição">  
        </div>
        <div class="form-group">
          <p>Categorias de produtos</p>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat1" value="Café">
            <label class="form-check-label" for="cat1">Café</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat2" value="Doces">
            <label class="form-check-label" for="cat2">Doces</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat3" value="Salgados">
            <label class="form-check-label" for="cat3">Salgados</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat4" value="Pipoca">
            <label class="form-check-label" for="cat4">Pipoca</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat5" value="Frutas">
            <label class="form-check-label" for="cat5">Frutas</label>
          </div>
        </div>
        <div class="form-group">  
          <label for="streetAddress">Endereço de operação</label> 
          <input id="latitude" value="{{location.coordinates.[1]}}" type="text" name="lat" hidden>
          <input id="longitude" value="{{location.coordinates.[0]}}" type="text" name="long" hidden>
          <input class="form-control" value="{{streetAddress}}" id="streetAddress" type="address" name="streetAddress" placeholder="Rua, n° - Cidade">
        </div>
        <div class="form-group">
          <label for="times">Horário de funcionamento</label> 
          <div class="form-row">
            <div class="col">
              <input class="form-control" value={{startTime}} type="time" name="startTime">
            </div>
            <div class="col">
              <input class="form-control" value={{endTime}} type="time" name="endTime">
              <input type="hidden" name="id" value="{{_id}}">
            </div>
          </div>
        </div>
        <div class="d-flex flex-row-reverse">
          <button type="submit" class="btn btn-primary">Salvar alterações</button>
        </div>
      </form>
      <hr>
      <form action="/upload-picture" method="POST" enctype="multipart/form-data" class="mt-4">
      <h4>Adicionar fotos</h4>
        <div class="form-group mt-2">
          <div class="custom-file">
            <input type="file" id="validatedCustomFile" class="custom-file-input" name="photo">
            <label class="custom-file-label" for="validatedCustomFile">Selecionar foto</label>
          </div>
        </div>
        <div class="form-group">
          <input class="form-control" type="textarea" name="description" placeholder="Adicione uma breve descrição da imagem">  
          <input type="hidden" name="id" value="{{_id}}">
        </div>
        <div class="d-flex flex-row-reverse">
          <button type="submit" class="btn btn-primary">Carregar foto</button>
        </div>
      </form>

    {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
    </div>
  </div>
</div>

