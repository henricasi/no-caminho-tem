<div class="container backdrop h-100">
  <div class="form-container p-3">
    <div class="container py-5 w-50 d-flex flex-column justify-content-center">
      <h2>Cadastrar nova vendinha</h2>
      <form class="mt-3" id="form" action="/add-venda" method="POST" enctype="multipart/form-data">

        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Nome da sua vendinha"> 
        </div>
        <div class="form-group">
          <input class="form-control" type="textarea" name="description" placeholder="Adicione uma breve descrição">  
        </div>
        <div class="form-group">
          <p>Categorias de produtos</p>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat1" value="Café">
            <label class="form-check-label" for="cat1">Café</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat2" value="Doces">
            <label class="form-check-label" for="cat2">Doces</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat3" value="Salgados">
            <label class="form-check-label" for="cat3">Salgados</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat4" value="Pipoca">
            <label class="form-check-label" for="cat4">Pipoca</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="cat5" value="Frutas">
            <label class="form-check-label" for="cat5">Frutas</label>
          </div>
        </div>
        <div class="form-group">  
          <label for="streetAddress">Endereço de operação</label> 
          <input id="latitude" type="text" name="lat" hidden>
          <input id="longitude" type="text" name="long" hidden>
          <input class="form-control" id="streetAddress" type="address" name="streetAddress" placeholder="Rua, n° - Cidade">
        </div>
        <div class="form-group">
          <label for="times">Horário de funcionamento</label> 
          <div class="form-row">
            <div class="col">
              <input class="form-control" type="time" name="startTime">
            </div>
            <div class="col">
              <input class="form-control" type="time" name="endTime">
            </div>
          </div>
        </div>
        <div class="d-flex flex-row-reverse">
          <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
      </form>

    {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}