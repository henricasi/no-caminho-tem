<div class="container backdrop h-100">
  <div class="form-container p-3">
    <div class="container py-5 w-50 d-flex flex-column justify-content-center">
    <h3>Crie sua conta</h3>
    <form class="mt-3" id="form" action="/signup" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input type="text" name="username" class="form-control" placeholder="Nome de usuário">
      </div>
      <div class="form-group">
        <input type="password" name="password" class="form-control" placeholder="Digite uma senha">   
      </div>
      <div class="form-group">
        <input type="text" name="name" class="form-control" placeholder="Seu nome">
      </div>
      <div class="form-group">
        <input type="text" name="lastName" class="form-control" placeholder="Seu sobrenome">
      </div>
      <div class="form-group">
        <div class="custom-file">
          <input type="file" id="validatedCustomFile" class="custom-file-input" name="photo">
          <label class="custom-file-label" for="validatedCustomFile">Carregue uma foto de perfil</label>
        </div>
      </div>
      <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary">Criar conta</button>
      </div>
    </form>

    {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
    </div>
  </div>
</div>
