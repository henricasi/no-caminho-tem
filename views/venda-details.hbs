<div class="container">
  <figure>
    <img class="profile-picture-medium" src="{{owner.profilePicturePath}}" alt="{{owner.name}}">
    <caption>{{owner.name}} {{owner.lastName}}</caption>
  </figure>
  {{!-- exibir infos da vendinha --}}
  <div class="venda-info">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Categorias: {{#each categories}}
      {{#if @last}}
      <span>{{this}}</span>
      {{else}}
      <span>{{this}}, </span>
      {{/if}}
      {{/each}}
      </p>
    <p>Horário: {{startTime}} - {{endTime}}</p>
  </div>
  {{!-- exibir avaliações da vendinha --}}
  <div class="ratings-container">
    <h3>Avaliações</h3>
    {{#each ratings}}
    <div class="rating">
      <p>Nota: <strong>{{this.rating}}</strong></p>   {{!-- //TODO trocar nota por estrelas --}}
      <p>{{this.content}}</p>
      <p>Usuário: {{this.user}}</p>
    </div>
    {{/each}}
  </div>
  {{!-- exibir imagens da vendinha --}}
  <div class="pictures">
    {{#each pictures}}
    <a href="{{this.path}}"><img src="{{this.path}}" alt=""></a>
    {{/each}}
  </div>
  {{#if isSameOwner}}
  <a href="/edit-venda/{{_id}}">Editar</a>
  <a href="/delete-venda/{{_id}}">Deletar</a>
  {{/if}}
  <a href="/app">Voltar</a>
</div> 